<Window x:Class="BidderBlocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BidderBlocker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="username" HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap" Text="Username" VerticalAlignment="Center" Width="120"/>
        <TextBox x:Name="password" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="login" Content="Login" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="100,0,100,20" Height="50" Click="login_Click"/>
    </Grid>
</Window>
